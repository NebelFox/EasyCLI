<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <RootNamespace>Verbox</RootNamespace>
        <AssemblyName>Verbox</AssemblyName>
        <Title>Verbox</Title>
        <Authors>NebelFox</Authors>
        <Description>A framework for creating advanced CLIs</Description>
        <PackageId>NebelFox.Verbox</PackageId>
        <PackageTags>CLI</PackageTags>
        <PackageVersion>1.0.2</PackageVersion>
        <RepositoryUrl>https://github.com/NebelFox/verbox</RepositoryUrl>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DocumentationFile>bin\Debug\Verbox.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\Verbox.xml</DocumentationFile>
    </PropertyGroup>

</Project>
